<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:Laboratory.Loader.ViewModels"
        xmlns:assists="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
        x:Class="Laboratory.Loader.Views.MainWindow"
        Title="Laboratory"
        Width="800" Height="800" WindowStartupLocation="CenterScreen"
        Closed="OnClosed">

    <Design.DataContext>
        <viewModels:MainWindowViewModel />
    </Design.DataContext>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox UseFloatingWatermark="True" Classes="Outline" assists:TextFieldAssist.Label="Mod code" />
        <Button Classes="Accent" Content="Start the game" Click="StartGame" />
    </StackPanel>

</Window>